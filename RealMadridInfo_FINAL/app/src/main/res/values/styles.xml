<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="btn_default">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:paddingLeft">@dimen/normal_100</item>
        <item name="android:paddingRight">@dimen/normal_100</item>
        <item name="android:background">@drawable/bg_default</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h4_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="et_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:paddingLeft">@dimen/normal_100</item>
        <item name="android:paddingRight">@dimen/normal_100</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_default</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h4_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="img_default">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@drawable/ic_launcher_round</item>
    </style>

    <style name="tv_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/normal_100</item>
        <item name="android:paddingRight">@dimen/normal_100</item>
    </style>

    <style name="rv_item_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_100</item>
    </style>
</resources>